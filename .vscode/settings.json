{
    "[c]": {
        "files.encoding": "utf8"
    },
    "[cpp]": {
        "files.encoding": "utf8"
    },
    "editor.tabSize": 4,
	"files.exclude": {
        "**/CVS": false,
		"**/*.ctx": true
	},
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.cp": "cpp",
        "*.asm": "wla-dx-asm",
        "*.inc": "cpp",
        "dstypes.h": "c",
        "cwchar": "cpp",
        "axfxhooks.h": "c",
        "dspcode.h": "c",
        "algorithm": "cpp",
        "gxpixel.h": "c",
        "mtx.h": "c",
        "dolphin_trk.h": "c"
    },
    "search.useIgnoreFiles": false,
    "search.exclude": {
        "build/*/config.json": true,
        "build/**/*.MAP": true,
        "build.ninja": true,
        ".ninja_*": true,
        "objdiff.json": true
    }
}
